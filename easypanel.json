{
  "name": "sistema-gestao-comunicacao",
  "source": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/YOUR_REPO.git",
    "branch": "main"
  },
  "build": {
    "type": "dockerfile",
    "dockerfile": "Dockerfile.vps"
  },
  "deploy": {
    "port": 3000,
    "healthcheck": {
      "path": "/health",
      "interval": 30,
      "timeout": 10,
      "retries": 3,
      "startPeriod": 60
    },
    "resources": {
      "memory": "1Gi",
      "cpu": "1.0"
    },
    "restartPolicy": {
      "condition": "any",
      "delay": "5s",
      "maxAttempts": 3,
      "window": "120s"
    }
  },
  "domains": [
    {
      "name": "sistema-gestao.exemplo.com",
      "ssl": true
    }
  ],
  "environment": {
    "NODE_ENV": "production",
    "DB_HOST": "localhost",
    "DB_PORT": "5432",
    "DB_NAME": "InfoDB",
    "DB_USER": "postgres",
    "DB_PASSWORD": "RF@DB##&441",
    "JWT_SECRET": "jwt_secret_rf2024_gestao_sistema_muito_seguro_12345",
    "SESSION_SECRET": "session_secret_rf2024_gestao_sistema_muito_seguro_67890"
  },
  "scaling": {
    "minReplicas": 1,
    "maxReplicas": 3,
    "targetCPU": 70
  },
  "monitoring": {
    "metrics": true,
    "logs": true,
    "alerts": {
      "cpu": 80,
      "memory": 80,
      "errorRate": 5
    }
  }
}