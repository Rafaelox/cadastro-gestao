{
  "name": "sistema-gestao-comunicacao",
  "source": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/YOUR_REPO.git",
    "branch": "main"
  },
  "build": {
    "type": "dockerfile",
    "dockerfile": "./Dockerfile.vps"
  },
  "deploy": {
    "port": 80,
    "healthcheck": {
      "path": "/health",
      "interval": 30,
      "timeout": 10,
      "retries": 3,
      "startPeriod": 60
    },
    "resources": {
      "memory": "1Gi",
      "cpu": "1.0"
    },
    "restartPolicy": {
      "condition": "any",
      "delay": "5s",
      "maxAttempts": 3,
      "window": "120s"
    }
  },
  "domains": [
    {
      "name": "sistema-gestao.exemplo.com",
      "ssl": true
    }
  ],
  "environment": {
    "NODE_ENV": "production",
    "DB_HOST": "localhost",
    "DB_PORT": "5432",
    "DB_NAME": "sistema_gestao",
    "DB_USER": "gestao_user",
    "DB_PASSWORD": "sua_senha_segura",
    "JWT_SECRET": "seu_jwt_secret_muito_seguro",
    "SESSION_SECRET": "seu_session_secret_muito_seguro"
  },
  "scaling": {
    "minReplicas": 1,
    "maxReplicas": 3,
    "targetCPU": 70
  },
  "monitoring": {
    "metrics": true,
    "logs": true,
    "alerts": {
      "cpu": 80,
      "memory": 80,
      "errorRate": 5
    }
  }
}